<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp" android:orientation="horizontal"
    android:background="@drawable/blackmoon"
    android:id="@+id/customTaskbar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interview"
        android:id="@+id/tvFrontPage"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_gravity="center|center_horizontal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMinTemperature"
        android:layout_weight="1" />


</LinearLayout>
